{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "files": [
    "src/types/tree-sitter-typescript.d.ts"
  ],
  "include": ["src/**/*", "src/core"],
  "exclude": ["node_modules"]
}